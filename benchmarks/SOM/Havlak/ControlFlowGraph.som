ControlFlowGraph = (
  | basicBlockMap startNode edgeList |

  initialize = (
    basicBlockMap := Vector new.
    edgeList := Vector new.
  )

  createNode: name = (
    | node |

    (basicBlockMap at: name)
      ifNotNil: [ node := basicBlockMap at: name ]
      ifNil: [
        node := BasicBlock new: name.
        basicBlockMap at: name put: node ].

    self numNodes = 1 ifTrue: [startNode := node].
    ^ node
  )
  
  addEdge: edge = (
    edgeList append: edge
  )
  
  numNodes = (
    ^ basicBlockMap size
  )
  
  startBasicBlock = (
    ^ startNode
  )
  
  basicBlocks = (
    ^ basicBlockMap
  )
  
  ----
  
  new = ( ^ super new initialize )
)
